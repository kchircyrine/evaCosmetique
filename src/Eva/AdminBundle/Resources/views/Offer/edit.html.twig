{% extends "::base.html.twig" %}
{%block title %}
    <h2><i class="fa fa-desktop lblue"></i>Offres</h2>
{% endblock%}
{% block body -%}
    <div class="modal-dialog">
        <div class="modal-content widget tasks-widget">
            <div class="modal-header widget-head br-orange">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                <h4 class="modal-title">Modifier Offre</h4>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        {{ form_start(edit_form) }}

                        <div class="col-lg-12">
                            {{ form_label(edit_form.percent ,null, {'label_attr': {'class': 'control-label'}})}}
                        </div>
                        <div class="col-lg-12">
                            {{ form_widget(edit_form.percent,{'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-lg-12">
                            {{ form_errors(edit_form.percent) }}
                        </div>
                        <div class="col-lg-12">
                            {{ form_label(edit_form.dateStart ,null, {'label_attr': {'class': 'control-label'}})}}
                        </div>
                        <div class="col-lg-12">
                            {{ form_widget(edit_form.dateStart,{'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-lg-12">
                            {{ form_errors(edit_form.dateStart) }}
                        </div>
                        <div class="col-lg-12">
                            {{ form_label(edit_form.dateEnd ,null, {'label_attr': {'class': 'control-label'}})}}
                        </div>
                        <div class="col-lg-12">
                            {{ form_widget(edit_form.dateEnd,{'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-lg-12">
                            {{ form_errors(edit_form.dateEnd) }}
                        </div>
                        <div class="col-lg-12">
                            {{ form_label(edit_form.products ,null, {'label_attr': {'class': 'control-label'}})}}
                        </div>
                        <div class="col-lg-12">
                            {{ form_widget(edit_form.products,{'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-lg-12">
                            {{ form_errors(edit_form.products) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal" aria-hidden="true">Annuler</button>
                {{ form_widget(edit_form.submit,{'attr': {'class': 'btn btn-warning btn-sm'}}) }}
            </div>
            {{ form_end(edit_form) }}
        </div>
    </div>
{% endblock %}
{% block script %}

{% endblock %}
