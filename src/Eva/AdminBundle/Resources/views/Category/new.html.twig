{% extends "::base.html.twig" %}
{% block body %}
    <div class="modal-dialog">
        <div class="modal-content widget tasks-widget">
            <div class="modal-header widget-head br-green">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                <h4 class="modal-title">Nouvelle Cat√©gorie</h4>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        {{ form_start(form) }}
                        <div class="col-lg-12">
                            {{ form_label(form.name ,null, {'label_attr': {'class': 'control-label'}})}}
                        </div>
                        <div class="col-lg-12">
                            {{ form_widget(form.name,{'attr': {'class': 'form-control percent','placeholder': "nom",'data-required':'true'}}) }}
                        </div>
                        <div class="col-lg-12">
                            {{ form_errors(form.name) }}
                        </div>
                        <div class="col-lg-12">
                            {{ form_label(form.index ,null, {'label_attr': {'class': 'control-label'}})}}
                        </div>
                        <div class="col-lg-12">
                            {{ form_widget(form.index,{'attr': {'class': 'form-control percent','placeholder': "index",'data-required':'true'}}) }}
                        </div>
                        <div class="col-lg-12">
                            {{ form_errors(form.index) }}
                        </div>
                        <div class="col-lg-12">
                            {{ form_label(form.icon ,null, {'label_attr': {'class': 'control-label'}})}}
                        </div>
                        <div class="col-lg-12">
                            {{ form_widget(form.icon,{'attr': {'class': 'form-control percent','placeholder': "icon",'data-required':'true'}}) }}
                        </div>
                        <div class="col-lg-12">
                            {{ form_errors(form.icon) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal" aria-hidden="true">Annuler</button>
            {{ form_widget(form.submit,{'attr': {'class': 'btn btn-success btn-sm'}}) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
