    <!-- Data Tables JS -->
    <script src="{{asset('bundles/evaadmin/js/jquery.dataTables.min.js')}}"></script>	
    <!-- Pretty Photo JS -->
    <script src="{{asset('bundles/evaadmin/js/jquery.prettyPhoto.js')}}"></script>	
    <!-- Rate It JS -->
    <script src="{{asset('bundles/evaadmin/js/jquery.rateit.min.js')}}"></script>	
    <!-- Full calendar -->
    <script src="{{asset('bundles/evaadmin/js/moment.min.js')}}"></script>
    <script src="{{asset('bundles/evaadmin/js/fullcalendar.min.js')}}"></script>
    <!-- Respond JS for IE8 -->
    <script src="{{asset('bundles/evaadmin/js/respond.min.js')}}"></script>
    <!-- HTML5 Support for IE -->
    <!-- Custom JS -->
    <script src="{{asset('bundles/evaadmin/js/custom.js')}}"></script>

    <script src="{{asset('bundles/evaadmin/js/html5shiv.js')}}"></script>

