{% extends "::base.html.twig" %}
{% block body -%}
    <div class="modal-dialog">
        <div class="modal-content widget tasks-widget">
            <div class="modal-header widget-head br-orange">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                <h4>Tag edit</h4>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        {{ form_start(edit_form) }}
                        <div class="col-lg-12">
                            {{ form_label(edit_form.name ,null, {'label_attr': {'class': 'control-label'}})}}
                        </div>
                        <div class="col-lg-12">
                            {{ form_widget(edit_form.name,{'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-lg-12">
                            {{ form_errors(edit_form.name) }}
                        </div>
                        <div class="col-lg-12">
                            {{ form_label(edit_form.products ,null, {'label_attr': {'class': 'control-label'}})}}
                        </div>
                        <div class="col-lg-12">
                            {{ form_widget(edit_form.products,{'attr': {'class': 'form-control percent','placeholder': "nom",'data-required':'true'}}) }}
                        </div>
                        <div class="col-lg-12">
                            {{ form_errors(edit_form.products) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal" aria-hidden="true">Annuler</button>
                {{ form_widget(edit_form.submit,{'attr': {'class': 'btn btn-warning btn-sm'}}) }}
            </div>
            {{ form_end(edit_form) }}
        </div>
    </div>
{% endblock %}
{% block script %}
{% endblock %}
