{% extends '::base.html.twig' %}
{% block body %}
    <form role="form" action="{{ path("fos_user_security_check") }}" method="post">
         <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="form-group">
            <label for="email">Email</label>
            <input type="text" class="form-control" id="username" name="_username" placeholder="Email">
        </div>
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" class="form-control" id="password" name="_password" placeholder="Password">
        </div>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="checkbox">
            <label>
                <input id="remember_me" name="_remember_me" type="checkbox"> Se rappeler de moi
            </label>
        </div>
        <button type="submit"  id="_submit" name="_submit"  class="btn btn-info btn-sm">Connexion</button>
        <button type="reset" class="btn btn-default btn-sm">Reset</button>
    </form>

{% endblock %} 