{% extends 'EvaClientBundle:Layout:layout2.html.twig' %}

{% block stylesheet %}
    {{ parent () }}
    <script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
      <link rel="stylesheet" type="text/css" href="{{asset('bundles/evaclient/css/jquery.gritter.css')}}" />     
      <script type="text/javascript" src="{{asset('bundles/evaclient/js/jquery.gritter.js')}}"></script>
    
{% endblock %}


{% block detail %}
    <div id="maincontainer">
        <section id="product">
            <div class="container">

                <!-- Product Details-->
                <div class="row">
                    <div class="span5">
                        <ul class="thumbnails mainimage">
                            {% for image in product.images %}
                                <li class="span5">
                                    <a  rel="position: 'inside' , showTitle: false, adjustX:-4, adjustY:-4" class="thumbnail cloud-zoom" href="{{app.request.basepath}}/uploads/product/{{image.url}}">
                                        <img alt="" src="{{app.request.basepath}}/uploads/product/{{image.url}}">
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                        <ul class="thumbnails mainimage">
                            {% for image in product.images %}
                                <li class="producthtumb">
                                    <a class="thumbnail" href="#">
                                        <img alt="" src="{{app.request.basepath}}/uploads/product/{{image.url}}">
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>

                    </div>
                    <div class="span7">
                        <div class="row">
                            <div class="span7">
                                <h1 class="productname"><span class="bgnone">{{product.name}}</span></h1>
                                <div class="productprice">
                                    {% if offer is null %}
                                        <div class="prnewprice">{{product.price}} TND </div>
                                    {% else %}
                                        <div class="proldprice">{{product.price}} TND</div>
                                        <div class="prnewprice">{{(product.price*(100-offer.percent))/100}} TND</div>
                                    {% endif %}
                                </div>
                                <div class="quantitybox">
                                    <a OnClick="addToCart({{product.id}});" class="btn btn-success pull-left" href="#">Ajout au panier</a>
                                    <div class="links  productlinks">
                                        <a OnClick="addToWishlist({{product.id}});" class="wishlist" href="wishlist.html">wishlist</a>
                                        <a class="compare" href="compare.html">comparer</a>
                                    </div>
                                </div>
                                <div class="productdesc">
                                    <ul class="nav nav-tabs" id="myTab">
                                        <li class="active"><a href="#description">Description</a>
                                        </li>
                                        <li><a href="#specification">Spécification</a>
                                        </li>
                                        <li><a href="#review">Composition</a>
                                        </li>
                                        <li><a href="#producttag">Utilisation</a>
                                        </li>
                                    </ul>
                                    <div class="tab-content">
                                        <div class="tab-pane active" id="description">
                                            {{product.description}}
                                        </div>
                                        <div class="tab-pane " id="specification">
                                            <ul class="productinfo">
                                                <li>
                                                    <span class="productinfoleft"> Marque:</span> {{product.marque.name}} </li>
                                                <li>
                                                    <span class="productinfoleft"> Référence:</span> {{product.reference}} </li>
                                                <li>
                                                    <span class="productinfoleft"> Disponibilité: </span>
                                                    {% if product.quantity >=1 %} En Stock {% else %} non disponible {% endif %}
                                                </li>


                                                {% if offer is not null %}
                                                    <li>
                                                        <span class="productinfoleft"> Prix avant promo:</span> {{product.price}} TND </li>
                                                    <li>

                                                    <li>
                                                        <span class="productinfoleft"> Prix aprés promo:</span> {{(product.price*(100-offer.percent))/100}} TND </li>
                                                    <li>

                                                    {% else %}
                                                    <li>
                                                        <span class="productinfoleft"> Prix:</span> {{product.price}} TND </li>
                                                    <li>

                                                    {% endif %}


                                            </ul>
                                        </div>
                                        <div class="tab-pane" id="review">
                                            <ul class="reveiw">
                                                <li>
                                                    <p>{{product.composition}} </p>
                                                </li>
                                            </ul>

                                        </div>
                                        <div class="tab-pane" id="producttag">
                                            <p> 
                                                {{product.userGuide}}
                                            </p>
                                            <ul class="tags">
                                                {% for tag in product.tags %}
                                                    <li><a href="#">{{tag.name}}</a>
                                                    {% endfor %}
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Product Description tab & comments-->

            </div>
        </section>
        <!--  Related Products-->
        <section id="related">
            <div class="container">
                <h1 class="headingfull"><span>Related Products</span></h1>
                <section id="thumbnails">
                    <ul class="thumbnails">
                        <li class="span3">
                            <a href="#" class="prdocutname">First Fashion Fabrics</a>
                            <div class="thumbnail">
                                <span  class="sale tooltip-test">Sale</span>
