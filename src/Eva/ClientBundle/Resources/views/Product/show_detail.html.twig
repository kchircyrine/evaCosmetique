                                    }
                                });
                            }



                            function addToWishlist($id) {
                                $.ajax({
                                    type: 'GET',
                                    dataType: 'json',
                                    url: '../app_dev.php/addwishlist/' + $id,
                                    beforeSend: function (xhr) {

