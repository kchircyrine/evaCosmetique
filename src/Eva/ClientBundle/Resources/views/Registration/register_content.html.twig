{% extends '::base.html.twig' %}
{% block body %}
    <div class="alert alert-info">Just <strong>Click "Submit"</strong> to visit the Dashboard</div>
						
						<form method="post" role="form" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }}>
						  <div class="form-group">
							<label for="name">Nom </label>
                                                        {{form_widget(form.lastName,{'attr': {'class':"form-control",'placeholder':"Nom"}} )}}
							
						  </div>
						  <div class="form-group">
							<label for="prenom">Prénom</label>
							 {{form_widget(form.firstName,{'attr': {'class':"form-control",'placeholder':"Prénom"}} )}}
						  </div>
                                                  
                                                   <div class="form-group">
							<label for="email">Email</label>
							 {{form_widget(form.email,{'attr': {'class':"form-control",'placeholder':"Email"}} )}}
						  </div>
                                                  
						  <div class="form-group">
							<label for="password">Mot de passe</label>
                                                        {{form_widget(form.plainPassword.first,{'attr': {'class':"form-control",'placeholder':"Mot de passe"}} )}}
                                                       
						  </div>
						  <div class="form-group">
							<label for="cpassword">Confirmer mot de passe</label>
                                                          {{form_widget(form.plainPassword.second,{'attr': {'class':"form-control",'placeholder':"Mot de passe"}} )}}
                                                  
						  </div>
                                                          
                                                  <div class="form-group">
							<label for="prenom">Gourvernorat</label>
							 {{form_widget(form.address.governorate,{'attr': {'class':"form-control",'placeholder':"Gourvernorat"}} )}}
						  </div>
                                                  <div class="form-group">
							<label for="prenom">Code postal</label>
							 {{form_widget(form.address.zipCode,{'attr': {'class':"form-control",'placeholder':"Code postal"}} )}}
						  </div>
                                                   <div class="form-group">
							<label for="telephone">Téléphone</label>
							 {{form_widget(form.telephone,{'attr': {'class':"form-control",'placeholder':"Téléphone"}} )}}
						  </div>
                                                   <div class="form-group">
							<label for="telephone">Adresse</label>
							 {{form_widget(form.address.street,{'attr': {'class':"form-control",'placeholder':"Adresse"}} )}}
						  </div>
                                                     {{ form_errors(form) }}

                                                    {{ form_rest(form) }}     
                                                          
						 
						  <button type="submit" class="btn btn-info btn-sm">Submit</button>
						  <button type="reset" class="btn btn-default btn-sm">Reset</button>
						</form>

{% endblock %} 